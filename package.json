{
  "name": "@migueltvms/moco-mcp",
  "version": "1.3.1",
  "description": "Model Context Protocol (MCP) server for MOCO: time tracking, project management, holidays, and presence monitoring",
  "main": "dist/index.js",
  "bin": {
    "moco-mcp": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:mcp": "jest tests/mcp",
    "docker:build": "docker build -t moco-mcp .",
    "docker:build:http": "docker build -f Dockerfile.http -t moco-mcp-http .",
    "lint": "tsc --noEmit",
    "debug:http": "node --env-file=.env --inspect --import tsx/esm ./src/http.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "moco",
    "time-tracking",
    "project-management",
    "api",
    "typescript",
    "ai",
    "assistant"
  ],
  "author": {
    "name": "Jo√£o Miguel Tabosa Vaz Marques Silva",
    "email": "joao@miguel.ms",
    "url": "https://github.com/MiguelTVMS"
  },
  "license": "MIT",
  "homepage": "https://github.com/MiguelTVMS/moco-mcp#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/MiguelTVMS/moco-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/MiguelTVMS/moco-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
